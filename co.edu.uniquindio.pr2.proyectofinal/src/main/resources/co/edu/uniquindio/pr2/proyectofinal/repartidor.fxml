<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.pr2.proyectofinal.viewcontroller.RepartidorViewController"
            style="-fx-background-color: linear-gradient(to bottom, #f8f9fa, #e9ecef);"
            prefWidth="1200" prefHeight="700"
            AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

    <VBox alignment="TOP_CENTER" spacing="20"
          AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <padding>
            <Insets top="25" right="35" bottom="25" left="35" />
        </padding>

        <Label text="Gestión de Repartidores"
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2d3436;" />

        <GridPane hgap="25" vgap="18" VBox.vgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints minWidth="150" halignment="RIGHT" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="ID Repartidor:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="txtIdRepartidor" GridPane.rowIndex="0" GridPane.columnIndex="1" HBox.hgrow="ALWAYS" />

            <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="txtNombre" GridPane.rowIndex="1" GridPane.columnIndex="1" HBox.hgrow="ALWAYS" />

            <Label text="Cédula:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextField fx:id="txtCedula" GridPane.rowIndex="2" GridPane.columnIndex="1" HBox.hgrow="ALWAYS" />

            <Label text="Teléfono:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <TextField fx:id="txtTelefono" GridPane.rowIndex="3" GridPane.columnIndex="1" HBox.hgrow="ALWAYS" />

            <Label text="Contraseña:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
            <TextField fx:id="txtPassword" GridPane.rowIndex="4" GridPane.columnIndex="1" HBox.hgrow="ALWAYS" />

            <Label text="Disponibilidad:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
            <ComboBox fx:id="cbDisponibilidad" GridPane.rowIndex="5" GridPane.columnIndex="1" HBox.hgrow="ALWAYS" />
        </GridPane>

        <HBox alignment="CENTER" spacing="25" VBox.vgrow="NEVER">
            <Button fx:id="btnAgregarRepartidor" text="Agregar" onAction="#OnAgregarRepartidor"
                    maxWidth="Infinity" prefWidth="160" style="-fx-font-size: 14px;" />
            <Button fx:id="btnActualizarRepartidor" text="Actualizar" onAction="#OnActualizarRepartidor"
                    maxWidth="Infinity" prefWidth="160" style="-fx-font-size: 14px;" />
            <Button fx:id="btnLimpiarCampos" text="Limpiar" onAction="#OnLimpiarCampos"
                    maxWidth="Infinity" prefWidth="160" style="-fx-font-size: 14px;" />
        </HBox>

        <TableView fx:id="tablaRepartidores" VBox.vgrow="ALWAYS"
                   style="-fx-font-size: 14px; -fx-background-radius: 8; -fx-border-radius: 8;">
            <columns>
                <TableColumn fx:id="colIdRepartidor" text="ID Repartidor" />
                <TableColumn fx:id="colNombre" text="Nombre" />
                <TableColumn fx:id="colCedula" text="Cédula" />
                <TableColumn fx:id="colTelefono" text="Teléfono" />
                <TableColumn fx:id="colPassword" text="Contraseña" />
                <TableColumn fx:id="colDisponibilidad" text="Disponibilidad" />
            </columns>
        </TableView>

        <HBox alignment="CENTER_RIGHT" VBox.vgrow="NEVER">
            <Button fx:id="btnEliminarRepartidor" text="Eliminar" onAction="#OnEliminarRepartidor"
                    prefWidth="150" style="-fx-font-size: 14px;" />
        </HBox>
    </VBox>
</AnchorPane>