<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.pr2.proyectofinal.controller.CrearEnvioAdminController"
            prefWidth="700" prefHeight="500">

    <VBox spacing="15" alignment="TOP_CENTER" style="-fx-padding: 20;">
        <Label text="Crear Envío (Administrador)" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <GridPane hgap="10" vgap="10">
            <padding><Insets top="10" left="10" right="10" bottom="10"/></padding>

            <Label text="Usuario:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cbUsuario" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Origen:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtOrigen" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Destino:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtDestino" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Peso (kg):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtPeso" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Volumen (cm³):" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="txtVolumen" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Prioridad:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <ChoiceBox fx:id="cbPrioridad" GridPane.rowIndex="5" GridPane.columnIndex="1">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Normal"/>
                        <String fx:value="Alta"/>
                        <String fx:value="Urgente"/>
                    </FXCollections>
                </items>
            </ChoiceBox>

            <Label text="Repartidor:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cbRepartidor" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

            <Label text="Servicios adicionales:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
            <VBox spacing="5" GridPane.rowIndex="7" GridPane.columnIndex="1">
                <CheckBox fx:id="cbSeguro" text="Seguro (+$10000)"/>
                <CheckBox fx:id="cbFragil" text="Frágil (+$5000)"/>
                <CheckBox fx:id="cbFirma" text="Firma requerida (+$3000)"/>
            </VBox>
        </GridPane>

        <Button text="Crear Envío" onAction="#crearEnvio" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
    </VBox>
</AnchorPane>