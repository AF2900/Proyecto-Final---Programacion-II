<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.pr2.proyectofinal.controller.HistorialEnviosController"
            prefWidth="700" prefHeight="500">

    <top>
        <HBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <children>
                <Label text="Historial de Envíos"
                       style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="exportarPDFBtn" text="Exportar PDF"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white;"
                        onAction="#exportarPDF"/>
                <Button fx:id="exportarCSVBtn" text="Exportar CSV"
                        style="-fx-background-color: #16a085; -fx-text-fill: white;"
                        onAction="#exportarCSV"/>
                <Button fx:id="closeBtn" text="Cerrar"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white;"
                        onAction="#cerrarVentana"/>
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 15;">
            <children>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Filtrar por estado:" />
                        <ComboBox fx:id="estadoCombo" promptText="Todos los estados" prefWidth="150"/>

                        <Label text="Buscar por código:" />
                        <TextField fx:id="buscarField" promptText="Ej: E001" prefWidth="120"/>

                        <Button fx:id="filtrarBtn" text="Aplicar"
                                style="-fx-background-color: #3498db; -fx-text-fill: white;"
                                onAction="#filtrarEnvios"/>
                    </children>
                </HBox>

                <TableView fx:id="tablaEnvios" prefHeight="400">
                    <columns>
                        <TableColumn fx:id="colCodigo" text="Código" prefWidth="100"/>
                        <TableColumn fx:id="colEstado" text="Estado" prefWidth="120"/>
                        <TableColumn fx:id="colFechaCreacion" text="Fecha Creación" prefWidth="140"/>
                        <TableColumn fx:id="colEntrega" text="Entrega Estimada" prefWidth="140"/>
                        <TableColumn fx:id="colCosto" text="Costo" prefWidth="120"/>
                    </columns>
                </TableView>

            </children>
        </VBox>
    </center>
</BorderPane>