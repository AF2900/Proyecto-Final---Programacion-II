<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="co.edu.uniquindio.pr2.proyectofinal.controller.RastrearEnvioController">

    <HBox spacing="30" alignment="CENTER" prefWidth="850" prefHeight="560" style="-fx-background-color: linear-gradient(to bottom, #f9fafb, #e9eef3);"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <padding>
            <Insets top="25" right="25" bottom="25" left="25"/>
        </padding>

        <VBox spacing="15" alignment="TOP_CENTER" prefWidth="300"
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 6,0,0,2);">
            <Label text="Envíos Registrados" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1e2a38;"/>
            <ListView fx:id="listaEnvios" prefHeight="400" prefWidth="260"
                      style="-fx-background-radius: 10; -fx-border-color: #ccc; -fx-border-radius: 10;"/>
        </VBox>

        <VBox spacing="12" alignment="TOP_LEFT" prefWidth="500"
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 6,0,0,2);">
            <Label text="Rastreo de Envío" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1e2a38;"/>
            <Label fx:id="lblEstado" text="Selecciona un envío para ver los detalles"
                   style="-fx-font-size: 16px; -fx-text-fill: #3b3b3b; -fx-font-style: italic;"/>
            <Separator style="-fx-background-color: #d0d7de;"/>
            <Label text="Detalle del envío:" style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #1e2a38;"/>
            <TextArea fx:id="txtDetalles" wrapText="true" prefWidth="460" prefHeight="350" editable="false"
                      style="-fx-font-size: 14px; -fx-background-color: #f7f9fc; -fx-background-radius: 10; -fx-border-color: #d0d7de; -fx-border-radius: 10; -fx-text-fill: #2e2e2e;"/>
        </VBox>
    </HBox>

    <Button text="Volver al menú" onAction="#volverMenuUsuario"
            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"
            AnchorPane.topAnchor="10" AnchorPane.rightAnchor="10"/>
</AnchorPane>