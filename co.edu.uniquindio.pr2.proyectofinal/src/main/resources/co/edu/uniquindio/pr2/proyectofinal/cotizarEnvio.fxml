<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="co.edu.uniquindio.pr2.proyectofinal.viewcontroller.CotizarEnvioViewController">
    <VBox spacing="15" alignment="TOP_CENTER" style="-fx-background-color: #f5f7fa;"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <HBox alignment="TOP_RIGHT" prefWidth="Infinity">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Volver al menú" onAction="#volverMenuUsuario"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>

        <Label text="Cotizar Envío"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1e2a38;" />

        <GridPane hgap="10" vgap="10">
            <padding><Insets top="10" left="20" right="20" bottom="10"/></padding>

            <Label text="Origen:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtOrigen" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Ej. Calle 10 #20-30" />

            <Label text="Destino:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtDestino" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="Ej. Carrera 15 #5-25" />

            <Label text="Peso (kg):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtPeso" GridPane.rowIndex="2" GridPane.columnIndex="1" />

            <Label text="Volumen (cm³):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtVolumen" GridPane.rowIndex="3" GridPane.columnIndex="1" />

            <Label text="Prioridad:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <ChoiceBox fx:id="cbPrioridad" GridPane.rowIndex="4" GridPane.columnIndex="1">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Normal"/>
                        <String fx:value="Alta"/>
                        <String fx:value="Urgente"/>
                    </FXCollections>
                </items>
            </ChoiceBox>

            <Label text="Servicios adicionales:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <VBox spacing="5" GridPane.rowIndex="5" GridPane.columnIndex="1">
                <CheckBox fx:id="cbSeguro" text="Seguro (+$10000)"/>
                <CheckBox fx:id="cbFragil" text="Frágil (+$5000)"/>
                <CheckBox fx:id="cbFirma" text="Firma requerida (+$3000)"/>
            </VBox>
        </GridPane>

        <Button text="Calcular Costo" onAction="#calcularCosto"
                style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-weight: bold;" />
    </VBox>
</AnchorPane>