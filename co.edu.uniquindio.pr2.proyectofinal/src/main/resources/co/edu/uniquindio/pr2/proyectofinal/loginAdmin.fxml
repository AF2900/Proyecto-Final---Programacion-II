<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.pr2.proyectofinal.viewcontroller.LoginAdminViewController">

    <center>
        <HBox alignment="CENTER" prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #f8f9fa;">
            <children>

                <VBox alignment="CENTER" prefHeight="600.0" prefWidth="450.0"
                      style="-fx-background-color: linear-gradient(135deg, #4b6cb7 0%, #182848 100%);">
                    <children>
                        <ImageView fitHeight="137.0" fitWidth="128.0" preserveRatio="true">
                            <image>
                                <Image url="@/rastreador-entrega-o-gps-telefono_317810-4465.jpg" />
                            </image>
                        </ImageView>

                        <Label text="Panel de Administración" textFill="#c1a8ff">
                            <font><Font name="System Bold" size="28.0"/></font>
                            <VBox.margin><Insets top="20.0"/></VBox.margin>
                        </Label>

                        <Label text="Control total de tu plataforma" textFill="#a1b0ff">
                            <font><Font name="System Bold" size="16.0"/></font>
                            <VBox.margin><Insets top="10.0"/></VBox.margin>
                        </Label>

                        <Label text="Supervisa, analiza y gestiona cada rincón del sistema"
                               textAlignment="CENTER" textFill="#b0bbff" wrapText="true">
                            <font><Font size="14.0"/></font>
                            <VBox.margin><Insets left="40.0" right="40.0" top="30.0"/></VBox.margin>
                        </Label>
                    </children>
                </VBox>

                <VBox alignment="CENTER" prefHeight="600.0" prefWidth="450.0" style="-fx-background-color: white;">
                    <children>
                        <VBox alignment="CENTER" maxWidth="320.0" spacing="25.0">
                            <children>
                                <VBox alignment="CENTER" spacing="8.0">
                                    <children>
                                        <Label text="Iniciar Sesión (Admin)" textFill="#2c3e50">
                                            <font><Font name="System Bold" size="24.0"/></font>
                                        </Label>
                                        <Label text="Accede con tus credenciales de administrador" textFill="#7f8c8d">
                                            <font><Font size="14.0"/></font>
                                        </Label>
                                    </children>
                                </VBox>

                                <!-- Campos -->
                                <VBox spacing="8.0">
                                    <children>
                                        <Label text="Correo Electrónico" textFill="#34495e">
                                            <font><Font name="System Bold" size="14.0"/></font>
                                        </Label>
                                        <TextField fx:id="txtEmail" promptText="admin@correo.com"
                                                   style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6;
                                                          -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 12;">
                                            <font><Font size="14.0"/></font>
                                        </TextField>
                                    </children>
                                </VBox>

                                <VBox spacing="8.0">
                                    <children>
                                        <Label text="Contraseña" textFill="#34495e">
                                            <font><Font name="System Bold" size="14.0"/></font>
                                        </Label>
                                        <PasswordField fx:id="txtPassword" promptText="Ingresa tu contraseña"
                                                       style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6;
                                                              -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 12;">
                                            <font><Font size="14.0"/></font>
                                        </PasswordField>
                                    </children>
                                </VBox>

                                <Button fx:id="btnIniciarSesion" text="Iniciar Sesión"
                                        maxWidth="1.7976931348623157E308" prefHeight="45.0"
                                        style="-fx-background-color: #4b6cb7; -fx-text-fill: white; -fx-background-radius: 8;
                                               -fx-font-weight: bold; -fx-font-size: 16;">
                                    <cursor><Cursor fx:constant="HAND"/></cursor>
                                </Button>

                                <VBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Hyperlink fx:id="linkOlvidePassword"
                                                   text="¿Olvidaste tu contraseña?" textFill="#4b6cb7">
                                            <font><Font size="13.0"/></font>
                                        </Hyperlink>

                                        <HBox alignment="CENTER" spacing="5.0">
                                            <children>
                                                <Label text="¿No tienes cuenta?" textFill="#7f8c8d">
                                                    <font><Font size="13.0"/></font>
                                                </Label>
                                                <Hyperlink fx:id="linkRegistrarse"
                                                           text="Regístrate aquí" textFill="#4b6cb7">
                                                    <font><Font size="13.0"/></font>
                                                </Hyperlink>
                                            </children>
                                        </HBox>

                                        <Hyperlink fx:id="linkUsuario"
                                                   text="Ingresar como usuario" textFill="#0066cc">
                                            <font><Font size="13.0"/></font>
                                        </Hyperlink>
                                    </children>
                                </VBox>

                                <Label fx:id="lblMensaje" textAlignment="CENTER" textFill="#e74c3c" visible="false" wrapText="true">
                                    <font><Font size="13.0"/></font>
                                </Label>
                            </children>
                            <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/></padding>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>
</BorderPane>