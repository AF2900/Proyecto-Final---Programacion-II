<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="520" prefWidth="820"
            style="-fx-background-color: linear-gradient(to bottom, #f7f7f7, #dfe6e9);"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.pr2.proyectofinal.controller.UsuarioController">

    <top>
        <Label text="Gestión de Usuarios"
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2d3436;"
               BorderPane.alignment="CENTER">
            <padding>
                <Insets top="25" right="20" bottom="20" left="20" />
            </padding>
        </Label>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="25">
            <padding>
                <Insets top="25" right="80" bottom="20" left="80" />
            </padding>

            <HBox alignment="CENTER" prefWidth="720">
                <children>
                    <GridPane hgap="20" vgap="18" alignment="CENTER" prefWidth="720">
                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT" minWidth="160" />
                            <ColumnConstraints halignment="LEFT" minWidth="420" hgrow="ALWAYS" />
                        </columnConstraints>

                        <Label text="ID Usuario:" style="-fx-font-size: 16px; -fx-text-fill: #2d3436;"
                               GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <TextField fx:id="txtIdUsuario" GridPane.rowIndex="0" GridPane.columnIndex="1"
                                   prefWidth="420" />

                        <Label text="Nombre:" style="-fx-font-size: 16px; -fx-text-fill: #2d3436;"
                               GridPane.rowIndex="1" GridPane.columnIndex="0" />
                        <TextField fx:id="txtNombre" GridPane.rowIndex="1" GridPane.columnIndex="1"
                                   prefWidth="420" />

                        <Label text="Correo:" style="-fx-font-size: 16px; -fx-text-fill: #2d3436;"
                               GridPane.rowIndex="2" GridPane.columnIndex="0" />
                        <TextField fx:id="txtCorreo" GridPane.rowIndex="2" GridPane.columnIndex="1"
                                   prefWidth="420" />

                        <Label text="Teléfono:" style="-fx-font-size: 16px; -fx-text-fill: #2d3436;"
                               GridPane.rowIndex="3" GridPane.columnIndex="0" />
                        <TextField fx:id="txtTelefono" GridPane.rowIndex="3" GridPane.columnIndex="1"
                                   prefWidth="420" />
                    </GridPane>
                </children>
            </HBox>

            <HBox alignment="CENTER" spacing="18">
                <Button fx:id="btnAgregarUsuario" text="Agregar" onAction="#OnAgregarUsuario"
                        prefWidth="100" />
                <Button fx:id="btnActualizarUsuario" text="Actualizar" onAction="#OnActualizarUsuario"
                        prefWidth="100" />
                <Button fx:id="btnLimpiarCampos" text="Limpiar" onAction="#OnLimpiarCampos"
                        prefWidth="100" />
            </HBox>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="12">
            <padding>
                <Insets top="10" right="30" bottom="20" left="30" />
            </padding>

            <TableView fx:id="tablaUsuarios" prefHeight="220" prefWidth="760"
                       style="-fx-font-size: 14px;">
                <columns>
                    <TableColumn fx:id="colIdUsuario" text="ID Usuario" prefWidth="150" />
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="200" />
                    <TableColumn fx:id="colCorreo" text="Correo" prefWidth="250" />
                    <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="150" />
                </columns>
            </TableView>

            <HBox alignment="BOTTOM_RIGHT">
                <Button fx:id="btnEliminarUsuario" text="Eliminar" onAction="#OnEliminarUsuario"
                        prefWidth="100" style="-fx-font-size: 14px;" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane>