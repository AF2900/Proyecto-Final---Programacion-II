<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="520" prefWidth="820" style="-fx-background-color: linear-gradient(to bottom, #f7f7f7, #dfe6e9);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.pr2.proyectofinal.controller.RepartidorController">

    <top>
        <Label prefHeight="51.0" prefWidth="335.0" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2d3436;" text="Gestión de Repartidores" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="20.0" />
            </padding>
        </Label>
    </top>

    <bottom>
        <VBox spacing="12">
            <padding>
                <Insets bottom="20" left="30" right="30" top="10" />
            </padding>

            <TableView fx:id="tablaRepartidores" prefHeight="220" prefWidth="760" style="-fx-font-size: 14px;">
                <columns>
                    <TableColumn fx:id="colIdRepartidor" prefWidth="100" text="ID Repartidor" />
                    <TableColumn fx:id="colNombre" prefWidth="150" text="Nombre" />
                    <TableColumn fx:id="colCedula" prefWidth="150" text="Cédula" />
                    <TableColumn fx:id="colTelefono" prefWidth="150" text="Teléfono" />
                    <TableColumn fx:id="colPassword" prefWidth="120" text="Password" />
                    <TableColumn fx:id="colDisponibilidad" prefWidth="150" text="Disponibilidad" />
                </columns>
            </TableView>

            <HBox alignment="BOTTOM_RIGHT" />
        </VBox>
    </bottom>

    <right>
        <VBox alignment="TOP_CENTER" prefHeight="372.0" prefWidth="870.0" spacing="25" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="15.0" left="75.0" right="75.0" top="20.0" />
            </padding>

            <HBox alignment="CENTER" prefWidth="720">
                <children>
                    <GridPane alignment="CENTER" hgap="20" prefHeight="192.0" prefWidth="720" vgap="18">
                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT" minWidth="160.0" />
                            <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" minWidth="420.0" />
                        </columnConstraints>

                        <Label style="-fx-font-size: 16px; -fx-text-fill: #2d3436;" text="ID Repartidor:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="txtIdRepartidor" prefWidth="420" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label style="-fx-font-size: 16px; -fx-text-fill: #2d3436;" text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="txtNombre" prefWidth="420" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label style="-fx-font-size: 16px; -fx-text-fill: #2d3436;" text="Cédula:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="txtCedula" prefWidth="420" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label style="-fx-font-size: 16px; -fx-text-fill: #2d3436;" text="Teléfono:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <TextField fx:id="txtTelefono" prefWidth="420" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label style="-fx-font-size: 16px; -fx-text-fill: #2d3436;" text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <TextField fx:id="txtPassword" prefWidth="420" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                        <Label style="-fx-font-size: 16px; -fx-text-fill: #2d3436;" text="Disponibilidad:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                        <ComboBox fx:id="cbDisponibilidad" prefWidth="420" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                        <rowConstraints>
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                        </rowConstraints>
                    </GridPane>
                </children>
            </HBox>

            <HBox alignment="CENTER" spacing="18">
                <Button fx:id="btnAgregarRepartidor" onAction="#OnAgregarRepartidor" prefWidth="100" text="Agregar" />
                <Button fx:id="btnActualizarRepartidor" onAction="#OnActualizarRepartidor" prefWidth="100" text="Actualizar" />
                <Button fx:id="btnLimpiarCampos" onAction="#OnLimpiarCampos" prefWidth="100" text="Limpiar" />
                <Button fx:id="btnEliminarRepartidor" onAction="#OnEliminarRepartidor" prefWidth="100" style="-fx-font-size: 12px;" text="Eliminar" />
            </HBox>
        </VBox>
    </right>
</BorderPane>
