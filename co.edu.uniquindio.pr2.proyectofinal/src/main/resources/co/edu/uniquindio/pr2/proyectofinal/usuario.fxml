<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="500" prefWidth="800"
            style="-fx-background-color: linear-gradient(to bottom, #f7f7f7, #dfe6e9);"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.pr2.proyectofinal.controller.UsuarioController">

    <top>
        <Label text="Gestión de Usuarios"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2d3436;"
               BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>
        </Label>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>

            <GridPane hgap="15" vgap="15" alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="120" />
                    <ColumnConstraints halignment="LEFT" minWidth="250" />
                </columnConstraints>

                <Label text="ID Usuario:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="txtIdUsuario" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="txtNombre" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="Correo:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="txtCorreo" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                <Label text="Teléfono:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <TextField fx:id="txtTelefono" GridPane.rowIndex="3" GridPane.columnIndex="1" />
            </GridPane>

            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="btnAgregarUsuario" text="Agregar" onAction="#OnAgregarUsuario" />
                <Button fx:id="btnActualizarUsuario" text="Actualizar" onAction="#OnActualizarUsuario" />
                <Button fx:id="btnLimpiarCampos" text="Limpiar" onAction="#OnLimpiarCampos" />
            </HBox>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20" />
            </padding>

            <TableView fx:id="tablaUsuarios" prefHeight="200" prefWidth="700">
                <columns>
                    <TableColumn fx:id="colIdUsuario" text="ID Usuario" prefWidth="150" />
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="200" />
                    <TableColumn fx:id="colCorreo" text="Correo" prefWidth="250" />
                    <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="150" />
                </columns>
            </TableView>
            <HBox alignment="BOTTOM_RIGHT">
                <Button fx:id="btnEliminarUsuario" text="Eliminar" onAction="#OnEliminarUsuario" />
            </HBox>
        </VBox>
    </bottom>

</BorderPane>